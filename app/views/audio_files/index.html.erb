<div class="page-header"><h1>Listing Audio Files</h1></div>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>File name</th>
    <th>File size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @audio_files.each do |audio_file| %>
  <tr>
    <td><%= audio_file.name %></td>
    <td><%= audio_file.file_file_name %></td>
    <td><%= audio_file.file_file_size %></td>
    <td><%= link_to 'Show', audio_file, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_audio_file_path(audio_file), class: 'btn' %></td>
    <td><%= link_to 'Destroy', audio_file, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Audio file', new_audio_file_path, class: 'btn btn-primary' %>
